<div class="row">
  <div class="col-6">
    <h1><%= @document.title %></h1>

    <div class="pl-4">
      <%= simple_format(@document.body) %>
    </div>

    <br>
    <div class="buttons">
      <%= link_to 'Edit', edit_document_path(@document), class: 'btn btn-primary' %>
      <%= link_to 'Delete', document_path(@document),
                                method: :delete,
                                data: { confirm: 'Are you sure?' },
                                class: 'btn btn-primary' %>
      <%= link_to 'Back to Overview', documents_path, class: 'btn btn-secondary' %>
    </div>
  </div>
</div>
