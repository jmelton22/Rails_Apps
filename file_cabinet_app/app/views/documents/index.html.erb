<div class="constainer-fluid">
  <% if @documents.blank? %>
    <$%= render 'new' %>
  <% else %>
    <table class="table table-hover" id="docs_table">
      <thead>
        <tr>
          <th scope="col">Name</th>
          <th scope="col">Owner</th>
          <th scope="col">Last modified</th>
          <th scope="col"></th>
        </tr>
      </thead>
      <tbody>
        <% @documents.each do |doc| %>
          <tr>
            <td><%= doc.title %></td>
            <td><%= current_user.email %></td>
            <td><%= time_ago_in_words(doc.updated_at) %> ago</td>
            <td><%= link_to 'Open Doc', document_path(doc), class: 'btn btn-primary btn-sm' %></td>
          </tr>
        <% end %>
      </tbody>
    </table>
  <% end %>
</div>
